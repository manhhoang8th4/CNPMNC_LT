@model BookStoreOnline.Models.DANHGIA

@{
    ViewBag.Title = "Đánh giá sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đánh giá sản phẩm</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@using (Html.BeginForm("Create", "Reviews", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.SoSao)
        @Html.DropDownListFor(m => m.SoSao, new SelectList(new[] { 1, 2, 3, 4, 5 }), "Chọn số sao", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NoiDung)
        @Html.TextAreaFor(m => m.NoiDung, new { @class = "form-control", rows = 4 })
    </div>

    <button type="submit" class="btn btn-primary">Đánh giá</button>
}
