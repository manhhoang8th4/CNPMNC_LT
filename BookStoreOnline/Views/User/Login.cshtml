﻿@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Đăng Nhập";
}

<form class="ml-lg-auto ml-0 col-12 col-lg-12 form-container" method="post">
    <h2>Đăng Nhập</h2>
    <div class="form-group">
        <label for="Email">Email</label>
        <input style="margin-left:0;" type="email" class="form-control" id="Email" name="Email" required />
    </div>

    <div class="form-group">
        <label for="MatKhau">Mật Khẩu</label>
        <input type="password" class="form-control" id="MatKhau" name="MatKhau" required />
    </div>

    <button type="submit" class="btn-primary sign-in custom-btn">Đăng Nhập</button>

    @if (ViewBag.ThongBao != null)
    {
        <div class="alert alert-danger mt-2">
            @ViewBag.ThongBao
        </div>
    }
    <div class="form-group mt-3 text-center">
        <a href="@Url.Action("ForgotPassword", "User")" style="color: #007bff; text-decoration: underline;">
            Quên mật khẩu?
        </a>
    </div>
</form>
