@model BookStoreOnline.Models.KHACHHANG
@{
    ViewBag.Title = "Quên Mật Khẩu";
}

<h2>Quên Mật Khẩu</h2>

<div class="form-container">
    @if (ViewBag.ThongBao != null)
    {
        <div class="alert alert-info">@ViewBag.ThongBao</div>
    }

    <form action="@Url.Action("ForgotPassword", "User")" method="post">
        <div class="form-group">
            <label for="email">Nhập Email của bạn:</label>
            <input type="email" name="email" id="email" class="form-control" required placeholder="Nhập email của bạn" />
        </div>
        <button type="submit" class="btn btn-primary">Gửi yêu cầu khôi phục mật khẩu</button>
    </form>
</div>

<style>
    .form-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .alert {
        margin-bottom: 20px;
    }
</style>
